@model List<Tag>

    <div class="card">
        <div class="card-header bg-warning text-center fs-4">Etiket Listesi</div>
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a asp-action="Delete" asp-controller="Tag" asp-route-id="@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz ?')" class="btn btn-danger">Sil</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="card-footer">Toplam Kayıt : @Model.Count</div>
        
    </div>